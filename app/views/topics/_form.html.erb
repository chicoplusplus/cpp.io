<%= simple_form_for(@topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :label => 'Summary', :hint => 'Enter a quick summary of the topic you are interested in. (e.g. Backbone.js)' %>
    <%= f.input :description, :label => 'Details', :hint => 'Please be more specific about what you want to explore.', :input_html => {:rows => 10} %>
  </div>

  <div class="actions">
    <% if can?(:destroy, @topic) %> 
      <%= link_to 'Delete Topic', @topic, :title => 'Delete', :class => 'right alert tiny button', :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    <% end %>
    <%= f.submit 'Save Changes', :class => 'button' %> <span class="cancel-link">or <%= link_to 'cancel', @topic.persisted? ? @topic : topics_path %></span>
  </div>

<% end %>
