<% content_for :onready do %>
  $("#user_email").focus();
<% end %>

<div class="row">
  <div class="small-12 large-8 columns">
    <h2>Forgot Your Password?</h2>
    <h5 class="subheader">
      If you forgot your password, use the form below to have an email sent you you containing instructions on how to reset it.
    </h5>
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= f.input :email, :label => 'Email Address', :placeholder => "The email address you used to sign up", :required => true %>
      
      <div class="actions">
        <%= f.button :submit, :value => 'Reset My Password' %> <span class="cancel-link">or <%= link_to 'cancel', new_user_session_path %></span>
      </div>
    <% end %>
  </div>
</div>
